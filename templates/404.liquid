{% comment %}NOTE: If there are specific nonexistent URLs which your visitors are likely to request on a regular basis (maybe due to old links from elsewhere on the web), you can set up URL redirection on the Navigation page.{% endcomment %}

<div id="content" class="hasaside">
    <div class="pagecontent">
        <h1>{{ 'general.404.title' | t }}</h1>
        <p>{{ 'general.404.subtext_html' | t }}</p>
    </div> <!-- .pagecontent -->
  
    {% if settings.recommended_products_show_page == true and collections[settings.recommended_products_coll_page].products.size > 0 %}
    <div class="productlist">
		<h3>{{ 'general.featured_products.title_on_collection' | t }}</h3>
        {% assign collection = collections[settings.recommended_products_coll_page] %}
		{% for product in collection.products limit: 3 %}
        {% include 'product-list-item' %}
        {% endfor %}
	</div><!-- .productlist -->
	{% endif %}
</div><!-- #content -->

<div id="aside">
	{% include 'sidebar' %}
</div><!-- #aside -->
